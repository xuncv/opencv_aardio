var path = ..io.fullpath("./images/Lena.jpg")
img = cv2.imread(path,1)
if !img.empty() {
	console.varDump("depth:",img.shape)
}

console.varDump(img.size())
console.log("step1:",img.step1())
console.log("channels",img.channels())

