cv2.imshow("tttt",img)
//从感兴趣(ROI)区域创建Mat，类似截图
roi = cv2.mat(img,::RECT(100,100,200,200))
cv2.imshow("roi",roi)

b,g,r = cv2.split(roi)

cv2.imshow("b",b)
cv2.imshow("g",g)
cv2.imshow("r",r)
merge = cv2.merge({b;g;r})
cv2.imshow("merge",merge)
cv2.waitKey(0)
console.pause(true);